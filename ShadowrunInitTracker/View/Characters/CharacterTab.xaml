<UserControl x:Class="ShadowrunInitTracker.View.CharacterTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShadowrunInitTracker.View"
             xmlns:vm="clr-namespace:ShadowrunInitTracker.ViewModel">
    <UserControl.DataContext>
        <vm:CharacterViewModel/>
    </UserControl.DataContext>
    <UserControl.CommandBindings>
        <CommandBinding Command="vm:CharacterViewModel.AddCharacterCommand" Executed="AddCharacter"/>
        <CommandBinding Command="vm:CharacterViewModel.DeleteCharacterCommand" Executed="DeleteCharacter"/>
        <CommandBinding Command="vm:CharacterViewModel.ExportCharactersCommand" Executed="ExportCharacters"/>
        <CommandBinding Command="vm:CharacterViewModel.ImportCharactersCommand" Executed="ImportCharacters"/>
    </UserControl.CommandBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <local:CharacterCollectionView/>
        <local:CharacterEditView Grid.Column="1"/>
    </Grid>
</UserControl>

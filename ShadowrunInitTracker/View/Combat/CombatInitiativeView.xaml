<UserControl x:Class="ShadowrunInitTracker.View.CombatInitiativeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShadowrunInitTracker.View"
             xmlns:vm="clr-namespace:ShadowrunInitTracker.ViewModel"
             mc:Ignorable="d" >
    <UserControl.CommandBindings>
        <CommandBinding Command="vm:Commands.StartCombatCommand" Executed="StartCombat"/>
        <CommandBinding Command="vm:Commands.SaveCombatCommand" Executed="SaveCombat"/>
        <CommandBinding Command="vm:Commands.LoadCombatCommand" Executed="LoadCombat"/>
    </UserControl.CommandBindings>
    <UserControl.DataContext>
        <vm:CombatInitiativeViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <local:TurnGrid Title="Current Initiative" DataContext="{Binding CurrentInit}"/>
        <Button Content="Next" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
